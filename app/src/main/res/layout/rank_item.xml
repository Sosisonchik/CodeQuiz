<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"

        app:contentPadding="5dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/rank_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="30sp"
                android:textColor="@android:color/black"

                android:layout_toStartOf="@id/start_label"

                tools:text="Andrii"/>
            <TextView
                android:id="@+id/score_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20sp"
                android:textColor="@android:color/black"

                android:layout_below="@+id/rank_user_name"

                android:text="@string/score_label"/>
            <TextView
                android:id="@+id/rank_user_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="20sp"
                android:textColor="@android:color/black"

                android:layout_marginLeft="5dp"
                android:layout_below="@+id/rank_user_name"
                android:layout_toEndOf="@+id/score_label"
                android:layout_toStartOf="@+id/start_label"

                tools:text="100"/>

            <ImageView
                android:id="@+id/start_label"
                android:layout_width="78dp"
                android:layout_height="78dp"

                android:src="@drawable/ic_star_yelow"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>